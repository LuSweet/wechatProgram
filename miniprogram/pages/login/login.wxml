<!--pages/login/login.wxml-->

<view class="container">
  <view class="wrapper">
    <view class="left-top-sign">LOGIN</view>
    <view class="welcome">
      欢迎回来！
    </view>
    <view class="input-content">
      <view class="input-item">
        <text class="tit">账号</text>
        <input  type="text" placeholder="请输入手机号码" bindinput="getZhangHao" ></input>
      </view>
      <view class="input-item">
        <text class="tit">密码</text>
        <input type="password"  placeholder="请输入至少8位密码"  bindinput="getMiMa"></input>
      </view>
    </view>
    <button class="login-btn" bindtap="login">登录</button>
    <view class="forget-section">
      忘记密码?
    </view>
  </view>
  <view class="register-section">
    还没有账号?
    <text bindtap="startzhuce">马上注册</text>
  </view>
</view>
