page {
 width: 100%;
}


/*搜索框样式*/
.search{
  margin-top: 5rpx;
  width:90%;
  height: 60rpx;
  display: flex;
  border: 1rpx solid rgb(150, 151, 151);
  border-radius: 50rpx;
  align-items: center;
 align-self: center;
 margin-left: 20rpx;
 padding-left: 20rpx;
 padding-right: 20rpx;
 justify-content: space-between;
}

/* 第一部分 轮播图 */
.picsty{
height: 360rpx;
width: 90%;
margin-top: 6rpx;
margin-left:40rpx;
border-radius: 25rpx;
overflow: hidden;
}


/* 第二部分 分类区域 */
.twopart{
  width: 90%;
 display: flex;
margin: 8rpx auto 0;
}

.fenlei{
  display: flex;
  flex-direction: column;
  align-items: center; 
  width: 25%;
}

.fenlei_1{
  width:95rpx;
  height:95rpx;
  border-radius: 25rpx;
  background-color: rgb(238, 194, 231);
}

/* 第三部分 热门曲谱排行榜 */

.threepart{
  display: flex;
  flex-direction: column;
   width: 90%;
  margin: 8rpx auto 0;
 background-color: #f6f6f8;
  border-radius: 5rpx;
}

.title{
 margin: 0 auto;
}
.qupucontainer{
  width: 100%;

  margin:5rpx 10rpxx;
  display: flex;
}

.qupupic{
  height: 100rpx;
  width: 120rpx;
  margin:3rpx 10rpx;
  border-radius: 10rpx;
}
.song{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.songname{
  align-self: center;
}

.songtype{
  align-self: center;
  font-size: 30rpx;
  background-color: rgb(248, 117, 137);
  border-radius: 10rpx;
}

